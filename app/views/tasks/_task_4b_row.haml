.task-list-item
  .task-handle= image_tag('grip.svg')
  .task-text
    .task-item
      %p
        %a{href: "#{task_path(task)}", class: 'link-basic-dark'}= "#{task.item}"
    .task-category
      %p
        - task.tags.split(',').each do |tag|
          %a{href: "#{tags_path(tag)}", class: 'link-category'}= "#{tag.gsub(',','')}"
  .task-actions-4b
    .ta-destroy-4b
      %p= flex_destroy_path(task)
    .ta-punt-4b
      %p= flex_punt_path(task)
    .ta-edit-4b
      %p= link_to "edit", edit_task_path(task), class: 'link-button-edit'
    .ta-return-time-4b
      %p= distance_of_time_in_words_to_now(task.due_date)
