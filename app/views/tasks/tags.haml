.counter
  = link_to "all tasks", tasks_path
  |
  = link_to "view punts (#{@punt_count})", punted_tasks_path
.summary
  %h1= @title

  .l-sidebar
    %table{ data: { update_url: sort_tasks_url, behavior: 'sortable' } }
      %tbody
        - @tasks.each do |task|
          - if task.due_date <= Time.now
            %tr{ id: dom_id(task), data: { behavior: 'sortable-item' } }
              %td
                %span.task-name= link_to task.item, task_path(task)
                %span.task-edit= task.comments.count > 0 ? "#{task.comments.count} notes" : (link_to '(edit)', edit_task_path(task))
  %span punting & deleting are coming soon.. :-)

