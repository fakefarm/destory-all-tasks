.counter
  = "#{pluralize(@counter.count, "task")} destroyed!"
  &nbsp; &nbsp;
  = link_to "punts (#{@punt_count})", punted_tasks_path
.summary.tasks
  .l-primary-content
    = render 'form'

  .l-sidebar
    - if @tasks.count == 0
      %h1= message
    - else
      %table{ data: { update_url: sort_tasks_url, behavior: 'sortable' } }
        %tbody
          - @tasks.each do |task|
            - if task.due_date <= Time.now
              %tr{ id: dom_id(task), data: { behavior: 'sortable-item' } }
                %td
                  %span.task-name= link_to task.item, task_path(task)
                  %span.task-edit= task.comments.count > 0 ? "#{task.comments.count} notes" : (link_to '(edit)', edit_task_path(task))

                %td.punt#punt= render 'layouts/shared/punt', task: task
                %td.destroy= link_to 'Destroy', task, :method => :delete if task.comments.count < 1
                %td#task-tag= task.tags

