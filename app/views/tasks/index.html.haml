.counter= "#{pluralize(@counter.count, "task")} destroyed!"
.summary.tasks
  .l-primary-content
    = render 'form'

  .l-sidebar
    - if @tasks.count == 0
      %h1= message
    - else
      %table{:id => 'sortable', :data => {:update_url => "#{ sort_tasks_url }" }}
        %tr
          %th
          %th
          %th
          %th
        %tbody
          - @tasks.each do |task|
            %tr{ :id => "task_#{task.id}"}
              %td
                = link_to task.item, task_path(task)
                = task.comments.count > 0 ? "#{task.comments.count} notes" : (link_to '(edit)', edit_task_path(task))

              %td
              %td.destroy= link_to 'Destroy', task, :method => :delete if task.comments.count < 1
              %td#task-tag= task.tags

