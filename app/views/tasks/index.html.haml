.l-primary-content
  = render 'form'

.l-sidebar
  %table
    %tr
      %th
      %th
      %th

    - @tasks.each do |task|
      %tr
        %td= link_to task.item, edit_task_path(task)
        %td
          = 'feature' if task.feature == true
        %td= link_to 'Destroy', task, :method => :delete

