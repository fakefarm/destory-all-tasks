.summary
  .show-row
    .task-item
      %h1.h1= @task.item
      %p.return-time= "Returns in #{distance_of_time_in_words_to_now(@task.due_date)}"

    .button-show-row
      %p= link_to "#{@task.tags}", tags_path(@task.tags), class: 'link-basic-dark'
      .task-actions-3b
        .ta-destroy-3b
          %p= link_to "Destroy", task_path(@task), method: :delete, class: 'link-button-destroy'
        .ta-punt-3b
          %p= flex_punt_path(@task)
        .ta-edit-3b
          %p= link_to "edit", edit_task_path(@task), class: 'link-button-edit'

  = render 'comments/form'

  - @comments.each do |comment|
    %article
      .entry= markdown(comment.entry)
      .destroy-btn=link_to 'destroy', comment, method: :delete



