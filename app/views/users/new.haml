.summary
  %h1 Sign up

  = form_for @user do |f|
    - if @user.errors.any?
      %h2 Oops...
      - @user.errors.full_messages.each do |message|
        %p= message

    .field
      = f.label :email
      = f.text_field :email

    .field
      = f.label :password
      = f.password_field :password

    .field
      = f.label :password_confirmation
      = f.password_field :password_confirmation

    .actions
      = f.submit

%h2=link_to 'login', login_path