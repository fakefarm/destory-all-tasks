%html{ lang: "en", class: @body_class }
  <!--<![endif]-->

  %head
    = display_meta_tags
    %meta(charset="utf-8")
    %meta{name: "author", content: "Dave Woodall"}
    %meta{:'http-equiv' => "X-UA-Compatible", content: "chrome=1"}
    %meta{name: "viewport", content: "initial-scale=1.0, user-scalable=no, maximum-scale=1.0"}
    %meta{name: "apple-mobile-web-app-capable", content: "yes"}
    %meta{name: "apple-mobile-web-app-status-bar-style", content:"black"}


    %script{:src => "http://use.typekit.net/iyd5ccb.js", :type => "text/javascript"}
    :javascript
      try{Typekit.load();}catch(e){}

    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags

  %body.application{ class: @body_class }
    = # debug(params) if Rails.env.development?
    #l-constrained
      %header
        = render 'layouts/shared/header'
      .l-main
        = yield

      %footer#l-footer
        = render 'layouts/shared/footer'
    = render 'layouts/shared/analytics'
